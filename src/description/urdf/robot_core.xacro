<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
   </material>

    <xacro:property name="PI" value="3.1415926535"/>
    <xacro:property name="lower_limit_cylinder" value="${-PI/2}"/>
    <xacro:property name="upper_limit_cylinder" value="${PI/2}"/>
    <xacro:property name="velocity_cylinder" value="${1000}"/>
    <xacro:property name="building_distance_x" value="${200}"/>


    <link name="base_link">
    </link>



<!--0UILDING-->
<joint name="base_building_joint" type="fixed">
    <parent link="base_link"/>
    <child link="building"/>
    <origin xyz="${building_distance_x} 0 0"/>
</joint>

<link name="building">
<visual>
    <origin xyz="0 -40.030 0" rpy="0 0 ${PI/2}"/>
    <geometry>
        <mesh filename="package://description/meshes/building.stl" scale="0.5 0.5 0.5"/>
    </geometry>
    <material name="black"/>
</visual>
<collision>
    <origin xyz="0 -40.030 0" rpy="0 0 ${PI/2}"/>
    <geometry>
        <mesh filename="package://description/meshes/building.stl" scale="0.5 0.5 0.5"/>
    </geometry>
    <surface>
        <friction>
          <ode>
            <mu>20</mu>
            <mu2>20</mu2>
          </ode>
        </friction>
      </surface>
</collision>
<inertial>
    <origin xyz="0 -40.030 0" rpy="0 0 ${PI/2}"/>
    <mass value="5000"/>
    <inertia
            ixx="100.0" ixy="0.0" ixz="0.0"
            iyy="100.0" iyz="0.0"
            izz="100.0"/>
</inertial>
</link>






    <!--BASE OF THE PTZ CAMERA-->

    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_ptz_camera_link"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="base_ptz_camera_link">
        <visual>
            <origin xyz="0 20 0" rpy="0 0 0"/>
            <geometry>
                <!--box size="0.07 0.11 0.02"/-->
                <mesh filename="package://description/meshes/base.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 20 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://description/meshes/base.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 20 0" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia
                    ixx="1.0" ixy="0.0" ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0"/>
        </inertial>
    </link>

    <gazebo reference = "base_ptz_camera_link">
        <material>
            Gazebo/Black
        </material>
    </gazebo>

    <!--Cylinder-->
    <joint name="base_cylinder_joint" type="revolute">
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="${lower_limit_cylinder}" upper="${upper_limit_cylinder}" velocity="${velocity_cylinder}"/>
        <dynamics damping="0.2" friction="0.1"/>
        <origin xyz="0 0 0.015"/>
        <parent link="base_ptz_camera_link"/>
        <child link="cylinder"/>    
    </joint>
    
    
    <link name="cylinder">
        <visual>
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.0225"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.0225"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.0000001"/>
            <inertia
                    ixx="0.0000001" ixy="0.0" ixz="0.0"
                    iyy="0.0000001" iyz="0.0"
                    izz="0.0000001"/>
        </inertial>
    </link>
    <gazebo reference = "cylinder">
        <material>
            Gazebo/White
        </material>
    </gazebo>

    <!--LOWER LINK-->

    <joint name="cylinder_lower_joint" type="fixed">
        <parent link="cylinder"/>
        <child link="lower_link"/>
        <origin xyz="0 0 0.01"/>
    </joint>

    <link name="lower_link">
        <visual>
            <origin xyz="-0.035 0 -0.005"/>
            <geometry>
                <mesh filename="package://description/meshes/lower.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="-0.035 0 -0.005"/>
            <geometry>
                <mesh filename="package://description/meshes/lower.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.705"/>
            <inertia
                    ixx="0.01" ixy="0.0" ixz="0.002"
                    iyy="0.006" iyz="0.0"
                    izz="0.01"/>
        </inertial>
    </link>
    <gazebo reference = "lower_link">
        <material>
            Gazebo/Black
        </material>
    </gazebo>

    <!--Cylinder2-->

    <joint name="lower_cylinder2_joint" type="revolute">
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="${lower_limit_cylinder}" upper="${upper_limit_cylinder}" velocity="${velocity_cylinder}"/>
        <dynamics damping="0.2" friction="0.1"/>
        <parent link="lower_link"/>
        <child link="cylinder2"/>
        <origin xyz="0 0.08 0.07" rpy="${-PI/2} 0 0"/>
    </joint>

    <link name="cylinder2">
        <visual>
            <origin xyz="0 0 -0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.005"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 -0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.005"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.000001"/>
            <inertia
                    ixx="0.0000001" ixy="0.0" ixz="0.0"
                    iyy="0.0000001" iyz="0.0"
                    izz="0.0000001"/>
        </inertial>
    </link>
    <gazebo reference = "cylinder2">
        <material>
            Gazebo/White
        </material>
    </gazebo>

    <!--UPPER LINK-->
    <joint name="cylinder2_upper" type="fixed">
        <parent link="cylinder2"/>
        <child link="upper_link"/>
        <origin xyz="0 0 -0.02" rpy="${PI/2} 0 0"/>
    </joint>

    <link name="upper_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://description/meshes/upper.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://description/meshes/upper.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia
                    ixx="0.001" ixy="0.0" ixz="0.0"
                    iyy="0.0" iyz="0.0"
                    izz="0.001"/>
        </inertial>
    </link>
    <gazebo reference = "upper_link">
        <material>
            Gazebo/Black
        </material>
    </gazebo>

     





</robot>